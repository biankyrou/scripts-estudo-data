def comparar_mediana(grupo_1, grupo_0, var_numerica):
    mediana_grupo_1 = grupo_1[var_numerica].median()
    mediana_grupo_0 = grupo_0[var_numerica].median()
    return mediana_grupo_1, mediana_grupo_0


