def comparar_moda(grupo_1, grupo_0, var_numerica):
    moda_grupo_1 = grupo_1[var_numerica].mode()
    moda_grupo_0 = grupo_0[var_numerica].mode()
    return moda_grupo_1, moda_grupo_0

